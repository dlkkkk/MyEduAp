<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/register"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:id="@+id/regbg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="用  户  名："
        android:textSize="23sp"
        android:layout_below="@id/regbg"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="29dp"
        android:id="@+id/text_username"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/regbg"
        android:layout_marginTop="18dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/text_username" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="密        码："
        android:textSize="23sp"
        android:layout_below="@id/text_username"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_password"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_username"
        android:layout_marginTop="13dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/text_password"
        android:inputType="textPassword" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="确认密码："
        android:textSize="23sp"
        android:layout_below="@id/text_password"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:id="@+id/text_repw"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_password"
        android:layout_toRightOf="@id/text_repw"
        android:layout_marginRight="60dp"
        android:layout_marginTop="9dp"
        android:id="@+id/edit_repw"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="注    册"
        android:layout_below="@id/text_repw"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:textSize="25sp" />
</RelativeLayout>