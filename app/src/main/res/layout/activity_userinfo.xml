<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/tx"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/userlogin"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/userlogin"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="昵        称："
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/userlogin"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/text_name" />

    <TextView
        android:id="@+id/text_birth"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/text_name"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="出生日期："
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_birth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/edit_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/text_birth"
        android:focusable="false" />

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/text_birth"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="性        别："
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/edit_birth"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/text_gender"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/id_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="男"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/id_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="女"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_hobby"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/text_gender"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="兴趣爱好："
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_hobby"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_gender"
        android:layout_marginTop="12dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/text_hobby"
        android:focusable="false" />

    <TextView
        android:id="@+id/text_area"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/text_hobby"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="地        区："
        android:textSize="20sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_hobby"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@id/text_area"
        android:id="@+id/spinner_area"
        />


    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_area"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="25dp"
        android:text="确定"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_area"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="80dp"
        android:text="取消"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/button_submit"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:id="@+id/text_output"/>
</RelativeLayout>